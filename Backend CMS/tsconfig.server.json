{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "./dist-server",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": ["src/server/**/*", "src/api/**/*", "src/types/**/*", "src/lib/**/*"],
  "exclude": ["node_modules", "dist"]
}
