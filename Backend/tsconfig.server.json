{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "./dist-server",
    "target": "ES2020",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/server/**/*",
    "src/types/**/*",
    "src/features/automation/flowExecutor.ts",
    "src/features/automation/engine.ts",
    "src/features/automation/api.ts",
    "src/features/automation/types.ts",
    "src/lib/pocketbase.ts",
    "src/lib/types.ts",
    "src/env.d.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.tsx"]
}
