{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "./dist-server",
    "target": "ES2020",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/server/**/*", "src/types/**/*", "src/features/**/*", "src/lib/**/*", "src/env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
