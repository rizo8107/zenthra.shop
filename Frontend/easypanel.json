{
  "name": "konipai-frontend",
  "description": "Konipai E-commerce Frontend Application",
  "image": "ghcr.io/rizo8107/konipai.in:latest",
  "imagePullPolicy": "Always",
  "imagePullSecrets": [
    {
      "name": "ghcr-secret",
      "username": "rizo8107",
      "password": "${GITHUB_PAT}"
    }
  ],
  "ports": [
    {
      "port": 80,
      "targetPort": 80,
      "protocol": "http"
    }
  ],
  "env": [
    {
      "name": "VITE_POCKETBASE_URL",
      "value": "https://backend-pocketbase.7za6uc.easypanel.host/"
    },
    {
      "name": "VITE_RAZORPAY_KEY_ID",
      "value": "rzp_test_trImBTMCiZgDuF"
    },
    {
      "name": "VITE_SITE_TITLE",
      "value": "Konipai"
    },
    {
      "name": "VITE_SITE_LOGO",
      "value": "https://konipai.in/assets/logo.png"
    },
    {
      "name": "VITE_GTM_ID",
      "value": "${GTM_ID}"
    },
    {
      "name": "VITE_META_PIXEL_ID",
      "value": "${META_PIXEL_ID}"
    },
    {
      "name": "NODE_ENV",
      "value": "production"
    }
  ],
  "resources": {
    "cpu": "200m",
    "memory": "512Mi"
  },
  "healthcheck": {
    "path": "/",
    "port": 80,
    "interval": "30s",
    "timeout": "10s",
    "retries": 3
  },
  "volumes": [
    {
      "name": "cache",
      "path": "/app/node_modules/.vite",
      "size": "1Gi"
    }
  ],
  "restartPolicy": "always",
  "networks": ["default"],
  "replicas": 1,
  "autoscaling": {
    "enabled": true,
    "minReplicas": 1,
    "maxReplicas": 3,
    "targetCPUUtilizationPercentage": 80,
    "targetMemoryUtilizationPercentage": 80
  }
}