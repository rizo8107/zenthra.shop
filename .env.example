# Unified Environment Configuration
# Copy this file to .env in the ROOT directory (not in Frontend or Backend CMS)
# Both Frontend and Backend CMS will automatically use this shared .env file

# ==========================================
# PocketBase Configuration (REQUIRED)
# ==========================================
VITE_POCKETBASE_URL=http://127.0.0.1:8090
VITE_POCKETBASE_ADMIN_EMAIL=admin@example.com
VITE_POCKETBASE_ADMIN_PASSWORD=yourpassword123

# ==========================================
# Branding Configuration (OPTIONAL)
# ==========================================
# These are fallback values if site_settings is not configured
# It's recommended to configure branding via Backend Admin UI instead
VITE_SITE_TITLE=Your Store Name
VITE_SITE_LOGO=/logo.png

# ==========================================
# Webhook & Payment Server (REQUIRED)
# ==========================================
# Local development
VITE_WEBHOOK_SERVER_URL=http://localhost:3001
# Production (update after deploying webhook server)
# VITE_WEBHOOK_SERVER_URL=https://webhooks.yourdomain.com

# ==========================================
# Frontend - Payment Gateway (REQUIRED)
# ==========================================
VITE_RAZORPAY_KEY_ID=rzp_test_YOUR_KEY
RAZORPAY_KEY_SECRET=your_razorpay_secret

# ==========================================
# Backend CMS - Email Configuration (OPTIONAL)
# ==========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourstore.com

# ==========================================
# Backend CMS - Web Push (OPTIONAL)
# ==========================================
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key

# ==========================================
# WhatsApp Integration (OPTIONAL)
# ==========================================
VITE_WHATSAPP_API_URL=https://your-whatsapp-api.com
VITE_EVOLUTION_API_KEY=your-evolution-api-key
VITE_EVOLUTION_API_URL=https://your-evolution-api.com
VITE_EVOLUTION_INSTANCE_NAME=your-instance-name

# ==========================================
# Analytics & Tracking (OPTIONAL)
# ==========================================
VITE_PUBLIC_POSTHOG_KEY=your-posthog-key
VITE_PUBLIC_POSTHOG_HOST=https://app.posthog.com
VITE_GEMINI_API_KEY=your-gemini-api-key

# ==========================================
# Webhooks & CRM (OPTIONAL)
# ==========================================
VITE_CRM_ORDER_ENDPOINT=https://your-crm.com/orders
WEBHOOK_SERVER_URL=http://localhost:3001
VITE_WEBHOOKS_API_BASE=http://localhost:3001
WEBHOOKS_ADMIN_API_KEY=your-admin-api-key
WEBHOOKS_COLLECTION=webhooks
WEBHOOKS_FAILURES_COLLECTION=webhook_failures

# ==========================================
# Frontend URLs (OPTIONAL)
# ==========================================
VITE_ZENTHRA_FRONTEND_URL=http://localhost:8081
VITE_ZENTHRA_AUTH_PATH=/auth
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-key

# ==========================================
# Docker Port Configuration (OPTIONAL)
# ==========================================
FRONTEND_PORT=8081
CMS_UI_PORT=4000
CMS_API_PORT=3001
