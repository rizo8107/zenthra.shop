# Unified Environment Configuration for Zenthra Shop
# Copy this file to .env in the ROOT directory (not in Frontend or Backend CMS)
# Both Frontend and Backend CMS will automatically use this shared .env file

# ==========================================
# PocketBase Configuration (REQUIRED)
# ==========================================
VITE_POCKETBASE_URL=http://127.0.0.1:8090
VITE_POCKETBASE_ADMIN_EMAIL=admin@example.com
VITE_POCKETBASE_ADMIN_PASSWORD=yourpassword123

# ==========================================
# Site Configuration (REQUIRED)
# ==========================================
VITE_SITE_TITLE=Zenthra Shop
VITE_SITE_LOGO=/logo.png
VITE_ZENTHRA_FRONTEND_URL=http://localhost:8080
VITE_ZENTHRA_AUTH_PATH=/auth

# ==========================================
# Payment Gateway Configuration (REQUIRED)
# ==========================================
VITE_RAZORPAY_KEY_ID=rzp_test_YOUR_KEY
RAZORPAY_KEY_SECRET=your_razorpay_secret

# ==========================================
# Google Services (OPTIONAL)
# ==========================================
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ==========================================
# WhatsApp Integration (OPTIONAL)
# ==========================================
VITE_EVOLUTION_API_KEY=your_evolution_api_key
VITE_EVOLUTION_API_URL=http://localhost:8080
VITE_EVOLUTION_INSTANCE_NAME=zenthra_shop

# ==========================================
# CRM Integration (OPTIONAL)
# ==========================================
VITE_CRM_ORDER_ENDPOINT=https://your-crm.com/api/orders

# ==========================================
# Webhook Configuration (OPTIONAL)
# ==========================================
WEBHOOK_SERVER_URL=http://localhost:3001
VITE_WEBHOOKS_API_BASE=http://localhost:3001/api
WEBHOOKS_ADMIN_API_KEY=your_webhook_admin_key
WEBHOOKS_COLLECTION=webhooks
WEBHOOKS_FAILURES_COLLECTION=webhook_failures

# ==========================================
# Analytics & Tracking (OPTIONAL)
# ==========================================
VITE_PUBLIC_POSTHOG_KEY=your_posthog_key
VITE_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ==========================================
# AI Integration (OPTIONAL)
# ==========================================
VITE_GEMINI_API_KEY=your_gemini_api_key

# ==========================================
# Backend CMS Configuration
# ==========================================
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key

# ==========================================
# Email Configuration (OPTIONAL)
# ==========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourstore.com
